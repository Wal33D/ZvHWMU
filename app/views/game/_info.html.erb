<style>

	body{ height:100%;
		  width:100%;
		  position:absolute !important;}

	h1{ margin-top:75px;
	    text-align: center; }

	img{ max-height:45px;
		 max-width:45px; }

	.infoTable{ 
				width:100%;
				overflow-y:scroll;
				max-height:250px; }

	#list{ overflow:scroll; }

	#search{
		height:50px!important;
		padding-top:8px;
	    background-color:rgba(255, 174, 52, 1) !important; 
		width:100%;}

	 #searchField{
	 	padding-top:8px;
		width:100%!important;
		height:50px!important;
		background-color:rgba(255, 174, 52, 0.8) !important; }
	}		
	#userfield{
		display: inline!important;
		border: none !important;
		width:100%!important;
	}
	#userfield input{
		padding-top:8px;
		height:50px!important;
		background: none!important;
		width:87%!important;
		border:none !important;
		font-size: 22px!important;
	}
	img{
		display: inline-block!important;
		float:left!important;
		
	}

	table td input{color:white!important;}


.content { padding: 50px; }

.edit {
  float: right;
  padding-right: 10px;
}

#task-form { padding-bottom: 15px; }

</style>

<div id="info">
  <h1> Tag a Zombie! </h1>
  <div id="tasks"><%= render @tasks %></div>

<table class="sortable table table-bordered table-condensed">
  <thead>
    <tr>
    <%= search_form_for @q, :url => profile_path, :html => { :method => :get, :class => "well form-inline" } do |f| %>
  <div class="form-group">
      <th><%= f.text_field :name_cont, :type => "search" ,:class => "form-control", :placeholder => "Search by name", :id =>"searchField"%></th>
      <th><%= f.submit "Search", :id => "search"%></th>
  </div>
    </tr>
    <% end %>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr id = "name" class="user">
        <td id = "userfield">
	        <%= image_tag(user.avatar)%>  
			<%= simple_form_for @task, remote: true do |f|   %>
			  <%= f.text_field  :description, as: :text ,:class => "form-control",:value => user.name %>
		</td>
        <td>
        	<%= f.button :submit, :id => "search" %>
		</td>
	  <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
  <%= paginate @users %>
</div>
 </div>
