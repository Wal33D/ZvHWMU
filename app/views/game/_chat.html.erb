<div id="chat"  class="collapse" >
  <div class="well">
    <%= form_for @comment, remote: true do |f| %>
      <div class="form-group">
          <%= f.text_area :body, rows: 3, class: 'form-control',id: 'textarea', required: true, maxlength: 600 %>
          </div>
          <%= f.submit 'Post', class: 'btn btn-primary btn-lg', id:'postmessage' %>
    <% end %>
  </div>
            
     <div class="panel panel-default" id="comments">
       <div class="panel-body">
         <ul id = "acomment" class="media-list">
           <%= render @comments %>
           </ul>
       </div>
     </div>
</div>