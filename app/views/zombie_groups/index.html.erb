<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/trunk/richmarker/src/richmarker-compiled.js' type='text/javascript'></script>
<div id ="hordeList">
<table>
  <thead>
    <tr>
      <!-- <th>Latitude</th>
      <th>Longitude</th>-->
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @zombie_groups.each do |zombie_group| %>
      <tr>
       <!-- <td><%= zombie_group.latitude %></td>
        <td><%= zombie_group.longitude %></td>-->
        <td><%= zombie_group.address %></td>
        <td><%= zombie_group.title %></td>
        <td><%= link_to 'Show', zombie_group %></td>
        <td><%= link_to 'Edit', edit_zombie_group_path(zombie_group) %></td>
        <td><%= link_to 'Destroy', zombie_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  
  </tbody>

  <%= link_to 'Tag a Horde', new_zombie_group_path, :id =>"addZombie"%>
</table>

</div>
<br>

<style>
#map{

        position:absolute !important;
        margin-top: -20px !important;
        width: 100%   !important;
        height:100%  !important;
        visibility: visible !important;
        z-index: 5px;
        left:0;
  }

#hordeList{
        width:97%;
        margin-left: auto;
        margin-right: 1%;
        bottom:0;
        position: absolute;
        margin-top:10px;
        background-color: #FFFFB8;
        border-radius: 10px;
        padding: 10px;
        z-index: 2;
}
#addZombie{
  border: 1px solid black;
  padding: 10px;
  border-radius: 10px;

  float:right;
}
td{
        padding:  5px;
        font-size: 16px !important;
}

</style>
<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>